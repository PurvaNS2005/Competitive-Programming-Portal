<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/daysleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:text="gfvbc "
        android:textColor="#595757"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delButton" />

    <TextView
        android:id="@+id/calcontestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="3dp"
        android:text="Contest Name"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/calcontestTime"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/calcontestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="7dp"
        android:text="Start Time: 01 Jan 2024"
        android:textColor="#009688"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/calcontestStatus"
        app:layout_constraintStart_toStartOf="@+id/calcontestName" />

    <TextView
        android:id="@+id/calcontestStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time: 01 Jan 2024"
        android:textColor="#FF0000"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/calcontestTime" />

    <ImageButton
        android:id="@+id/delButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/background_transparent"
        android:padding="0dp"
        android:src="@drawable/del_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/daysleft"
        app:layout_constraintStart_toStartOf="@+id/daysleft"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
